<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLIMOV_BANQUITO_RESTFULL_DOTNET.MontoMaximo"
             Title="Monto Máximo">
    <VerticalStackLayout Padding="20">
        <Label 
            Text="Ingrese el número de cédula del cliente"
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="EntryCedula" 
            Placeholder="Número de cédula"
            Keyboard="Numeric"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand" />

        <Button 
            Text="Obtener Monto Máximo"
            Clicked="OnObtenerMontoMaximoClicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="LabelResultado"
            Text=""
            FontSize="Medium"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
