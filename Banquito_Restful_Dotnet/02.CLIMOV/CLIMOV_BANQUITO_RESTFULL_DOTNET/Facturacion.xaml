<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLIMOV_BANQUITO_RESTFULL_DOTNET.Facturacion"
             Title="Facturaci√≥n">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label 
                Text="Tel√©fonos disponibles"
                FontSize="Medium"
                Margin="0,20,0,10" />

            <!-- Filtro de marcas -->
            <HorizontalStackLayout 
                Margin="0,0,0,15"
                HorizontalOptions="Center">
                <Picker
                    x:Name="MarcasPicker"
                    Title="Seleccionar marca"
                    SelectedIndexChanged="OnMarcaSelected"
                    WidthRequest="200"
                    Margin="0,0,10,0">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Todos los tel√©fonos</x:String>
                            <x:String>SAMSUNG</x:String>
                            <x:String>XIAOMI</x:String>
                            <x:String>INFINIX</x:String>
                            <x:String>OPPO</x:String>
                            <x:String>REDMI</x:String>
                            <x:String>APPLE</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </HorizontalStackLayout>

            <CollectionView x:Name="CollectionViewTelefonos"
                           ItemsSource="{Binding Telefonos}"
                           Margin="0,0,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10" Margin="5" CornerRadius="8">
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Image Source="{Binding FotoImage}" 
                                           WidthRequest="100" 
                                           HeightRequest="100" 
                                           Aspect="AspectFill"/>
                                    <Label Text="{Binding NOMBRE}" FontSize="Medium" />
                                    <Label Text="{Binding PRECIO, StringFormat='Precio: ${0:F2}'}" FontSize="Small" />
                                </VerticalStackLayout>
                                <Button Grid.Column="1" 
                                    Text="Agregar üõí"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnAgregarAlCarritoClicked"
                                    TextColor="White"
                                    BackgroundColor="Green"
                                    FontSize="14"
                                    CornerRadius="8"
                                    Margin="5,0,0,0"
                                    HeightRequest="40"
                                    VerticalOptions="Center">
                                    <Button.Shadow>
                                        <Shadow Brush="#22000000"
                                                Offset="0,2"
                                                Radius="4"/>
                                    </Button.Shadow>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button 
                Text="Ver Carrito"
                Clicked="OnVerCarritoClicked"
                Margin="0,10,0,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>