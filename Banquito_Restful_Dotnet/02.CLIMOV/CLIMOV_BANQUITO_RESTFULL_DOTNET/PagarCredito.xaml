<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLIMOV_BANQUITO_RESTFULL_DOTNET.PagarCredito"
             Title="Pagar con Crédito">
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Campo para el número de cédula -->
        <Label Text="Número de Cédula:" FontSize="Medium" />
        <Entry x:Name="EntryCedula" Placeholder="Ingrese el número de cédula" Keyboard="Numeric" />

        <!-- Total de la factura -->
        <Label x:Name="LabelTotal" Text="Total: $0.00" FontSize="Large" FontAttributes="Bold" />

        <!-- Botón para verificar sujeto a crédito -->
        <Button Text="Verificar si es sujeto a crédito" Clicked="OnVerificarCreditoClicked" />
    </VerticalStackLayout>
</ContentPage>
